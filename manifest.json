{
  "required_api_version": "2",
  "name": "Gemini AI Chatbot",
  "description": "Uses Google Gemini API to provide AI responses.\n!!! pip install requests IS REQUIRED",
  "developer_name": "Piyush",
  "icon": "images/icon.png",
  "options": {
    "query_debounce": 1
  },
  "preferences": [
    {
      "id": "kw",
      "type": "keyword",
      "name": "Keyword",
      "description": "Keyword to ask AI",
      "default_value": "gem"
    },
    {
      "id": "api_key",
      "type": "text",
      "name": "Gemini API Key",
      "description": "Your Google Gemini API key",
      "default_value": ""
    },
    {
      "id": "model",
      "type": "select",
      "name": "AI Model",
      "description": "Select Gemini model to use",
      "default_value": "gemini-2.0-flash",
      "options": [
        "gemini-pro",
        "gemini-pro-vision",
        "gemini-1.5-pro",
        "gemini-1.5-flash",
        "gemini-2.0-flash",
        "gemini-2.5-experimental"
      ]
    },
    {
      "id": "default_prompt",
      "type": "text",
      "name": "Default Prompt",
      "description": "Text that will be appended to every query you make",
      "default_value": ""
    },
    {
      "id": "wrap_length",
      "type": "input",
      "name": "Line Length",
      "description": "The maximum number of characters per line",
      "default_value": "64"
    }
  ]
}
